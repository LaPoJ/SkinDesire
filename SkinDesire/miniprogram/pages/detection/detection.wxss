
.page{
	position: fixed;
	width: 100%;
	height: 100%;
	align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}
.bg-image{
	width: 100%;
	display: flex;
	position: absolute;
	z-index: -1;
}
.camera{
	height: 100%;
	/* background-color: blue; */
	padding-top: 50%;
}
.camera-item{
		font-size: 120rpx;
}
.camera-item::after{
	content: '';
	position: absolute;
	z-index: -1;
	/* background-color: red; */
	width: 200rpx;
	height: 200rpx;
	transform: translateY(-35rpx);
	border: 2px solid #000;
	border-radius: 50%;
}
.photo-user{
	display: block;
	margin-left: auto;
	margin-right: auto;
}